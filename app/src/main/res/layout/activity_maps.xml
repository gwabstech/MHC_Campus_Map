<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapsActivity">


    <androidx.fragment.app.FragmentContainerView xmlns:map="http://schemas.android.com/apk/res-auto"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MapsActivity" />


    <ListView
        android:id="@+id/myListview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/searchFilter"
        android:layout_marginTop="-50dp"
        android:divider="@color/design_default_color_primary_dark"
        android:dividerHeight="0.2dp"
        android:fastScrollAlwaysVisible="true"
        android:listSelector="@color/material_dynamic_neutral_variant40" />

    <EditText
        android:id="@+id/searchFilter"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:autofillHints="buildings"
        />


    <TextView
        android:id="@+id/theList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/searchFilter"
        android:layout_centerVertical="true"
        android:text="No Results"
        android:textSize="20sp"
        android:visibility="gone" />
    </RelativeLayout>